<header class="registarion-header">
    <%= link_to image_tag("kakomo-logo04.jpg", class:"kakomo-logo"), "/" %>
 </header>

<div  class="sessions-new-main"> 
   <h2>会員情報入力</h2>
 <div class="form-group">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, class:"input-default", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,"次回からパスワードの入力をスキップ" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class:"login-btn" %>
    </div>
   <% end %>
  </div>
</div>

<div class= "login-path">
<%= render "devise/shared/links" %>
</div>